<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="app.healthcompanion.heco.HecoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:background="#29d5c5">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/data"/>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="95dp"
                    android:gravity="center_vertical"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:text="Pengaturan Data"/>

            </RelativeLayout>

            <EditText
                android:id="@+id/isakit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textSize="20dp"
                android:textColor="#000000"
                android:hint="Nama Penyakit"/>

            <EditText
                android:id="@+id/ilihat"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textSize="20dp"
                android:textColor="#000000"
                android:hint="Judul Gejala"/>

            <EditText
                android:id="@+id/igejala1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textSize="20dp"
                android:textColor="#000000"
                android:hint="Gejala Penyakit 1"/>

            <EditText
                android:id="@+id/igejala2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textSize="20dp"
                android:textColor="#000000"
                android:hint="Gejala Penyakit 2"/>

            <EditText
                android:id="@+id/igejala3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textSize="20dp"
                android:textColor="#000000"
                android:hint="Gejala Penyakit 3"/>

            <EditText
                android:id="@+id/igejala4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textSize="20dp"
                android:textColor="#000000"
                android:hint="Gejala Penyakit 4"/>

            <EditText
                android:id="@+id/igejala5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textSize="20dp"
                android:textColor="#000000"
                android:hint="Gejala Penyakit 5"/>

            <EditText
                android:id="@+id/iherbal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textSize="20dp"
                android:textColor="#000000"
                android:hint="Obat Herbal"/>

            <EditText
                android:id="@+id/isintetis"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textSize="20dp"
                android:textColor="#000000"
                android:hint="Obat Sintetis"/>

            <EditText
                android:id="@+id/itips"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textSize="20dp"
                android:textColor="#000000"
                android:hint="Tips Kesehatan"/>

            <Button
                android:id="@+id/simpan"
                android:clickable="true"
                android:onClick="save"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="#29d5c5"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:text="Simpan"/>

            <Button
                android:id="@+id/batal"
                android:clickable="true"
                android:onClick="reset"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="#29d5c5"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:text="Batal"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Gejala Penyakit"/>

                <ListView
                    android:id="@+id/listheco"
                    android:layout_width="fill_parent"
                    android:layout_height="900dp">

                </ListView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
